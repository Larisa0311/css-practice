<div class="header">
    <div class="">
        {{>logo}}
    </div>
    <nav class="header-nav">
        <div class="header-nav-right">
            {{>nav list=header}}
        </div>
    </nav>
</div>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="main-image" class="main-image">

    <div class="main-content">
        <h1 class="main-heading"> {{heading}} </h1>
        <p class="main-description"> {{descriotion}} </p>
        <a class="button main-button" href="{{href}}">{{button}}</a>
    </div>
</div>

{{/with}}

<div class="featured">
    {{#each featured}}
    <div class="card">
        <div class="card-img" style="background-image: url({{photo}})"></div>
        <h2 class="card-title">{{heading}}</h2>
        <p class="card-text">{{info}}</p>
        <a href='{{linkUrl}}' class="button card-button">{{linkText}}</a>
    </div>
    {{/each}}
</div>


<div class="actions">
    {{#each actions}}
    <div class="actions-content">
        <h3 class="actions-title">{{heading}}</h3>
        <a class="button actions-button" href="{{url}}">{{text}}</a>
    </div>
    {{/each}}
</div>


<div class="footer">
    <div>
        {{>logo}}
        <span class="footer-copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer-title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</div>